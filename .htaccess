Options -Indexes
RewriteEngine on
RewriteCond $1 !^(index\.php|assets|static)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?/$1 [L,QSA]

